@model List<Quiz_Web.Models.Entities.FlashcardSet>

@if (Model == null || !Model.Any())
{
    <div class="empty-state text-center py-5">
        <div class="empty-icon mb-4">
            <i class="fas fa-layer-group"></i>
        </div>
        <h4 class="empty-title">Chưa có bộ flashcard nào</h4>
        <p class="empty-description">Bạn chưa tạo bộ flashcard nào. Hãy tạo bộ flashcard đầu tiên!</p>
        <a href="/flashcards/create" class="btn btn-primary btn-lg mt-3">
            <i class="fas fa-plus me-2"></i>Tạo flashcard mới
        </a>
    </div>
}
else
{
    <div class="flashcards-grid">
        @foreach (var flashcardSet in Model)
        {
            var cardCount = flashcardSet.Flashcards?.Count ?? 0;
            
            <div class="flashcard-set-wrapper">
                <div class="flashcard-set-card">
                    <!-- Flashcard Set Header -->
                    <div class="flashcard-set-header">
                        @if (!string.IsNullOrEmpty(flashcardSet.CoverUrl))
                        {
                            <img src="@flashcardSet.CoverUrl" 
                                 class="flashcard-set-image" 
                                 alt="@flashcardSet.Title">
                        }
                        else
                        {
                            <div class="flashcard-set-placeholder">
                                <i class="fas fa-layer-group"></i>
                            </div>
                        }
                        
                        <!-- Visibility Badge -->
                        @if (flashcardSet.Visibility == "Public")
                        {
                            <span class="flashcard-badge badge-public">
                                <i class="fas fa-globe me-1"></i>Công khai
                            </span>
                        }
                        else
                        {
                            <span class="flashcard-badge badge-private">
                                <i class="fas fa-lock me-1"></i>Riêng tư
                            </span>
                        }
                    </div>
                    
                    <!-- Flashcard Set Content -->
                    <div class="flashcard-set-content">
                        <h3 class="flashcard-set-title" title="@flashcardSet.Title">@flashcardSet.Title</h3>
                        
                        <p class="flashcard-set-description">
                            @if (!string.IsNullOrEmpty(flashcardSet.Description))
                            {
                                var plainText = System.Text.RegularExpressions.Regex.Replace(flashcardSet.Description, "<.*?>", string.Empty);
                                plainText = System.Net.WebUtility.HtmlDecode(plainText).Trim();
                                @(plainText.Length > 80 ? plainText.Substring(0, 80) + "..." : plainText)
                            }
                            else
                            {
                                <span class="text-muted">Chưa có mô tả</span>
                            }
                        </p>
                        
                        <!-- Flashcard Set Info -->
                        <div class="flashcard-set-info">
                            <span class="info-item">
                                <i class="fas fa-layer-group text-primary"></i>
                                <strong>@cardCount</strong> thẻ
                            </span>
                            <span class="info-item">
                                <i class="fas fa-calendar text-muted"></i>
                                @flashcardSet.CreatedAt.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                        
                        <!-- Flashcard Set Actions -->
                        <div class="flashcard-set-actions">
                            <a href="/flashcards/study/@flashcardSet.SetId" class="btn btn-study">
                                <i class="fas fa-play-circle me-1"></i>
                                Học ngay
                            </a>
                            <div class="action-buttons">
                                <a href="/flashcards/edit/@flashcardSet.SetId" class="btn btn-icon" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/flashcards/detail/@flashcardSet.SetId" class="btn btn-icon" title="Chi tiết">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    /* Empty State Styles */
    .empty-state {
        padding: 80px 20px;
    }
    
    .empty-icon {
        font-size: 80px;
        color: #cbd5e0;
    }
    
    .empty-icon i {
        color: #cbd5e0;
    }
    
    .empty-title {
        font-size: 24px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 12px;
    }
    
    .empty-description {
        font-size: 16px;
        color: #718096;
        margin-bottom: 24px;
    }
    
    /* Flashcards Grid */
    .flashcards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 24px;
        padding: 20px 0;
    }
    
    @@media (max-width: 768px) {
        .flashcards-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }
    }
    
    /* Flashcard Set Card */
    .flashcard-set-wrapper {
        position: relative;
    }
    
    .flashcard-set-card {
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .flashcard-set-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
    }
    
    /* Flashcard Set Header */
    .flashcard-set-header {
        position: relative;
        width: 100%;
        height: 180px;
        overflow: hidden;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }
    
    .flashcard-set-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .flashcard-set-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: #ffffff;
        font-size: 64px;
    }
    
    /* Flashcard Badge */
    .flashcard-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 600;
        z-index: 10;
        backdrop-filter: blur(4px);
    }
    
    .badge-public {
        background: rgba(16, 185, 129, 0.95);
        color: #ffffff;
    }
    
    .badge-private {
        background: rgba(107, 114, 128, 0.95);
        color: #ffffff;
    }
    
    /* Flashcard Set Content */
    .flashcard-set-content {
        padding: 20px;
        display: flex;
        flex-direction: column;
        flex: 1;
    }
    
    .flashcard-set-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a202c;
        margin: 0 0 12px 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 50px;
    }
    
    .flashcard-set-description {
        font-size: 14px;
        color: #718096;
        line-height: 1.6;
        margin: 0 0 16px 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 44px;
    }
    
    /* Flashcard Set Info */
    .flashcard-set-info {
        display: flex;
        gap: 16px;
        margin-bottom: 16px;
        padding-bottom: 16px;
        border-bottom: 1px solid #e2e8f0;
    }
    
    .info-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        color: #4a5568;
    }
    
    .info-item i {
        font-size: 14px;
    }
    
    /* Flashcard Set Actions */
    .flashcard-set-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 8px;
        margin-top: auto;
    }
    
    .btn-study {
        flex: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: #ffffff;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .btn-study:hover {
        background: linear-gradient(135deg, #f9548f 0%, #fdd835 100%);
        color: #ffffff;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(250, 112, 154, 0.4);
    }
    
    .action-buttons {
        display: flex;
        gap: 8px;
    }
    
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f7fafc;
        color: #4a5568;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .btn-icon:hover {
        background: #edf2f7;
        color: #2d3748;
        border-color: #cbd5e0;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .flashcard-set-card {
            border-radius: 8px;
        }
        
        .flashcard-set-header {
            height: 160px;
        }
        
        .flashcard-set-content {
            padding: 16px;
        }
        
        .flashcard-set-title {
            font-size: 16px;
        }
        
        .btn-study {
            padding: 8px 16px;
            font-size: 13px;
        }
    }
</style>
