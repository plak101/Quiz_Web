@model List<Quiz_Web.Models.Entities.Course>
@{
    ViewData["Title"] = "Danh sách khóa học";
}

<!-- Compact Search Section -->
<section class="py-4 search-section">
    <div class="container">
        <div class="search-wrapper">
            <form asp-action="Search" method="get" class="search-form">
                <input type="text" 
                       name="q" 
                       class="search-input" 
                       placeholder="Tìm kiếm khóa học..." 
                       value="@ViewBag.SearchKeyword" />
                <button type="submit" class="search-btn">
                    <i class="fa-solid fa-search"></i>
                    <span>Tìm</span>
                </button>
            </form>
        </div>
    </div>
</section>

<!-- Courses Grid -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                @if (ViewBag.SearchKeyword != null)
                {
                    <text>Kết quả tìm kiếm: "@ViewBag.SearchKeyword"</text>
                }
                else if (ViewBag.Category != null)
                {
                    <text>Danh mục: @ViewBag.Category</text>
                }
                else
                {
                    <text>Tất cả khóa học</text>
                }
            </h2>
            <span class="text-muted">@((ViewBag.TotalCount ?? ViewBag.SearchResults) ?? 0) khóa học</span>
        </div>

        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fa-solid fa-inbox fa-5x text-muted mb-3"></i>
                <h3>Không tìm thấy khóa học</h3>
                <a asp-action="Index" class="btn btn-primary mt-3">Xem tất cả</a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var course in Model)
                {
                    // Generate random rating between 4.0 and 5.0 using CourseId as seed
                    var random = new Random(course.CourseId);
                    var rating = Math.Round(4.0 + random.NextDouble(), 1);
                    var reviewCount = course.CoursePurchases.Count > 0 
                        ? course.CoursePurchases.Count 
                        : random.Next(10, 500);
                    
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <a asp-action="Detail" asp-route-slug="@course.Slug" class="text-decoration-none">
                            <div class="card h-100 shadow-sm course-card">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(course.CoverUrl))
                                    {
                                        <img src="@course.CoverUrl" class="card-img-top" 
                                             alt="@course.Title" style="height: 180px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-primary d-flex align-items-center justify-content-center" 
                                             style="height: 180px;">
                                            <i class="fa-solid fa-book fa-3x text-white"></i>
                                        </div>
                                    }
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title fw-bold text-dark mb-2 course-title" 
                                        title="@course.Title">
                                        @course.Title
                                    </h6>
                                    <p class="text-muted small mb-2" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @course.Owner.FullName
                                    </p>
                                    
                                    <!-- Rating Section -->
                                    <div class="rating-section mb-2">
                                        <span class="rating-value fw-bold text-warning">@rating</span>
                                        <span class="stars ms-1">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(rating))
                                                {
                                                    <i class="fa-solid fa-star text-warning"></i>
                                                }
                                                else if (i - rating < 1 && i - rating > 0)
                                                {
                                                    <i class="fa-solid fa-star-half-stroke text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa-regular fa-star text-warning"></i>
                                                }
                                            }
                                        </span>
                                        <span class="text-muted small ms-1" style="white-space: nowrap;">(@reviewCount.ToString("N0"))</span>
                                    </div>
                                    
                                    @if (course.Price == 0)
                                    {
                                        <span class="badge bg-success mb-2" style="width: fit-content;">MIỄN PHÍ</span>
                                    }
                                    else
                                    {
                                        <p class="h5 text-primary fw-bold mb-2" style="white-space: nowrap;">
                                            @course.Price.ToString("N0") ₫
                                        </p>
                                    }

                                    <span class="btn btn-outline-primary mt-auto w-100" style="white-space: nowrap;">
                                        Xem chi tiết
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                                   asp-route-search="@ViewBag.SearchKeyword"
                                   asp-route-category="@ViewBag.Category">
                                    <i class="fa-solid fa-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-page="@i"
                                   asp-route-search="@ViewBag.SearchKeyword"
                                   asp-route-category="@ViewBag.Category">
                                    @i
                                </a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                                   asp-route-search="@ViewBag.SearchKeyword"
                                   asp-route-category="@ViewBag.Category">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
    </div>
</section>

@section Styles {
    <link href="~/css/course/course-index.css" rel="stylesheet" asp-append-version="true" />
}
