@{
	Layout = "_LayoutAccount";
	ViewData["Title"] = "Link không hợp lệ";
}
<section class="container" id="reset_password_invalid">
	<div class="auth-wrapper p-5 mt-5">
		<div class="auth-image" style="background-image: url('/asset/image/Login.svg');">
		</div>

		<div class="auth-form">
			<div class="auth-card text-center">
				<div class="mb-4">
					<i class="fa-solid fa-circle-xmark text-danger" style="font-size: 64px;"></i>
				</div>
				
				<h4 class="text-danger mb-3">Link không hợp lệ</h4>
				
				<div class="alert alert-warning" role="alert">
					<i class="fa-solid fa-triangle-exclamation me-2"></i>
					@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
					{
						@ViewBag.ErrorMessage
					}
					else
					{
						<text>Liên kết đặt lại mật khẩu không hợp lệ hoặc đã hết hạn.</text>
					}
				</div>

				<p class="text-muted mb-4">
					Liên kết đặt lại mật khẩu chỉ có hiệu lực trong 1 giờ. 
					Vui lòng yêu cầu đặt lại mật khẩu mới.
				</p>

				<div class="d-grid gap-2">
					<a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-primary">
						<i class="fa-solid fa-arrow-rotate-left me-2"></i>
						Yêu cầu đặt lại mật khẩu mới
					</a>
					<a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
						<i class="fa-solid fa-arrow-left me-2"></i>
						Quay lại đăng nhập
					</a>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script>
		// Auto redirect after 10 seconds
		setTimeout(function() {
			window.location.href = '@Url.Action("Login", "Account")';
		}, 10000);
	</script>
}