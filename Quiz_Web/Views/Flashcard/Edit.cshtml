@model Quiz_Web.Models.ViewModels.EditFlashcardSetViewModel
@{
    ViewData["Title"] = "Chỉnh sửa bộ Flashcard";
}

<!-- Hero Section -->
<section class="py-4 bg-gradient">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center text-white">
                <h1 class="display-5 fw-bold mb-3">Chỉnh sửa bộ Flashcard</h1>
                <p class="lead">Cập nhật thông tin bộ thẻ học tập của bạn</p>
            </div>
        </div>
    </div>
</section>

<!-- Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Alert Messages -->
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fa-solid fa-circle-exclamation me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Flashcard Form Card -->
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0">
                            <i class="fa-solid fa-layer-group me-2"></i>Thông tin bộ Flashcard
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit" asp-controller="Flashcard" asp-route-id="@Model.SetId" 
                              method="post" id="flashcardForm" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="SetId" />
                            <input type="hidden" asp-for="CoverUrl" />
                            
                            <!-- Title -->
                            <div class="mb-4">
                                <label asp-for="Title" class="form-label fw-bold">
                                    Tiêu đề <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" class="form-control form-control-lg" 
                                       placeholder="Ví dụ: Từ vựng tiếng Anh cơ bản" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- Description -->
                            <div class="mb-4">
                                <label asp-for="Description" class="form-label fw-bold">
                                    Mô tả
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3"
                                          placeholder="Mô tả ngắn gọn về nội dung bộ flashcard"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <!-- Visibility -->
                            <div class="mb-4">
                                <label asp-for="Visibility" class="form-label fw-bold">
                                    Chế độ hiển thị <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Visibility" class="form-select">
                                    <option value="Public">Công khai - Ai cũng có thể xem</option>
                                    <option value="Private">Riêng tư - Chỉ mình tôi</option>
                                    <option value="Unlisted">Không liệt kê - Chỉ người có link</option>
                                </select>
                                <span asp-validation-for="Visibility" class="text-danger"></span>
                            </div>

                            <!-- Current Cover Image -->
                            @if (!string.IsNullOrEmpty(Model.CoverUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Ảnh bìa hiện tại</label>
                                    <div>
                                        <img src="@Model.CoverUrl" alt="Current cover" 
                                             class="img-thumbnail" style="max-width: 300px;" />
                                    </div>
                                </div>
                            }

                            <!-- Cover Image -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Ảnh bìa mới (tùy chọn)</label>
                                <input type="file" name="coverFile" accept="image/*" class="form-control" id="coverFile" />
                                <small class="text-muted">Để trống nếu không muốn thay đổi. Định dạng: jpg, jpeg, png, gif, webp</small>
                                
                                <!-- Image Preview -->
                                <div id="imagePreview" class="mt-3" style="display: none;">
                                    <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 300px;" />
                                </div>
                            </div>

                            <!-- Tags and Language Row -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label asp-for="TagsText" class="form-label fw-bold">
                                        Thẻ tag
                                    </label>
                                    <input asp-for="TagsText" class="form-control" 
                                           placeholder="Ví dụ: tiếng anh, từ vựng, cơ bản" />
                                    <span asp-validation-for="TagsText" class="text-danger"></span>
                                    <small class="text-muted">Ngăn cách bằng dấu phẩy</small>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Language" class="form-label fw-bold">
                                        Ngôn ngữ
                                    </label>
                                    <input asp-for="Language" class="form-control" 
                                           placeholder="Ví dụ: Tiếng Việt, English" />
                                    <span asp-validation-for="Language" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3 justify-content-end mt-4">
                                <a asp-action="Detail" asp-route-id="@Model.SetId" class="btn btn-outline-secondary btn-lg">
                                    <i class="fa-solid fa-times me-2"></i>Hủy
                                </a>
                                <button type="submit" class="btn btn-info text-white btn-lg">
                                    <i class="fa-solid fa-check me-2"></i>Cập nhật
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/flashcard-form.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Image preview
        document.getElementById('coverFile')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(ev) {
                    document.getElementById('previewImg').src = ev.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById('imagePreview').style.display = 'none';
            }
        });

        // Form validation
        document.getElementById('flashcardForm')?.addEventListener('submit', function(e) {
            const title = document.querySelector('input[name="Title"]')?.value.trim();
            if (!title) {
                e.preventDefault();
                alert('Vui lòng nhập tiêu đề bộ flashcard!');
            }
        });
    </script>
}
