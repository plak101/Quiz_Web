@model Quiz_Web.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-shopping-cart me-2"></i>Giỏ hàng của bạn</h4>
                </div>
                <div class="card-body">
                    @if (Model.HasItems)
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row mb-3 pb-3 border-bottom">
                                <div class="col-md-3">
                                    @if (!string.IsNullOrEmpty(item.CoverUrl))
                                    {
                                        <img src="@item.CoverUrl" alt="@item.Title" class="img-fluid rounded" style="max-height: 120px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 120px;">
                                            <i class="fas fa-book fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <h5 class="mb-2">@item.Title</h5>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-user me-1"></i>@item.InstructorName
                                    </p>
                                    <small class="text-muted">
                                        Thêm vào giỏ: @item.AddedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <div class="col-md-3 text-end">
                                    <h5 class="text-primary mb-2">@item.Price.ToString("N0") VNĐ</h5>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeFromCart(@item.CourseId)">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5>Giỏ hàng trống</h5>
                            <p class="text-muted">Hãy thêm khóa học vào giỏ hàng để tiếp tục</p>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Khám phá khóa học
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-calculator me-2"></i>Tổng kết</h5>
                </div>
                <div class="card-body">
                    @if (Model.HasItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>Số khóa học:</span>
                            <span>@Model.CartItems.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <span>@Model.Total.ToString("N0") VNĐ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Tổng cộng:</strong>
                            <strong class="text-primary fs-4">@Model.Total.ToString("N0") VNĐ</strong>
                        </div>
                        
                        @Html.Partial("_PaymentButtons")
                    }
                    else
                    {
                        <p class="text-muted text-center">Không có sản phẩm nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/payment.js"></script>
    <script>
        async function removeFromCart(courseId) {
            try {
                const response = await fetch(`/api/cart/remove/${courseId}`, {
                    method: 'DELETE',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Có lỗi xảy ra');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi xóa khóa học');
            }
        }
    </script>
}