@model dynamic
@{
    ViewData["Title"] = "Báo cáo người dùng";
    Layout = "_LayoutAdmin";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Báo cáo người dùng</h2>
    <div class="btn-group">
        <button type="button" class="btn btn-success" onclick="exportToCSV()">
            <i class="bi bi-file-earmark-spreadsheet"></i> Xuất CSV
        </button>
        <button type="button" class="btn btn-primary" onclick="exportToExcel()">
            <i class="bi bi-file-earmark-excel"></i> Xuất Excel
        </button>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalUsers</h4>
                        <p class="mb-0">Tổng người dùng</p>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.ActiveUsers</h4>
                        <p class="mb-0">Người dùng hoạt động</p>
                    </div>
                    <i class="bi bi-person-check fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.NewUsersThisMonth</h4>
                        <p class="mb-0">Người dùng mới (30 ngày)</p>
                    </div>
                    <i class="bi bi-person-plus fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Phân bố theo vai trò</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Vai trò</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.UsersByRole)
                        {
                            <tr>
                                <td>@role.Role</td>
                                <td>@role.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="~/js/admin/export-reports.js"></script>
    <script>
        function exportToCSV() { window.exportToCSV('Báo cáo người dùng'); }
        function exportToExcel() { window.exportToExcel('Báo cáo người dùng'); }
    </script>
}