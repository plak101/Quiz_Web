@model List<Quiz_Web.Models.Entities.Class>
@{
    ViewData["Title"] = "Class Management";
    Layout = "_LayoutAdmin";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Class Management</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createClassModal">
        <i class="bi bi-plus"></i> Create Class
    </button>
</div>

<div class="card">
    <div class="card-body">
        <table id="classesTable" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Teacher</th>
                    <th>Term</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var classItem in Model)
                {
                    <tr>
                        <td>@classItem.ClassId</td>
                        <td>@classItem.Name</td>
                        <td><code>@classItem.Code</code></td>
                        <td>@classItem.Teacher?.FullName</td>
                        <td>@classItem.Term</td>
                        <td>@classItem.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("EditClass", new { id = classItem.ClassId })" class="btn btn-sm btn-outline-primary">Edit</a>
                            <form method="post" asp-action="DeleteClass" class="d-inline">
                                <input type="hidden" name="id" value="@classItem.ClassId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    $('#classesTable').DataTable({
        responsive: true,
        pageLength: 10,
        order: [[0, 'desc']],
        columnDefs: [
            { orderable: false, targets: [6] }
        ],
        language: {
            search: "Search classes:",
            lengthMenu: "Show _MENU_ classes per page",
            info: "Showing _START_ to _END_ of _TOTAL_ classes",
            paginate: {
                first: "First",
                last: "Last",
                next: "Next",
                previous: "Previous"
            }
        }
    });
});
</script>
}

<!-- Create Class Modal -->
<div class="modal fade" id="createClassModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="CreateClass">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Class Name *</label>
                        <input type="text" name="Name" class="form-control" required maxlength="200" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Class Code *</label>
                        <input type="text" name="Code" class="form-control" required maxlength="20" />
                        <div class="form-text">Unique identifier for the class</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Term</label>
                        <input type="text" name="Term" class="form-control" maxlength="50" placeholder="e.g., Fall 2024" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Class</button>
                </div>
            </form>
        </div>
    </div>
</div>