@{
    ViewData["Title"] = "Giới thiệu";
}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
<link rel="stylesheet" href="~/asset/css/Introduce.css" asp-append-version="true" />

<div class="introduce-container">
    <!-- Hero Section -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="hero-title">Bạn muốn học như thế nào?</h1>
            <p class="hero-description">
                Nắm vững kiến thức đang học với thẻ ghi nhớ tương tác, bài kiểm tra thử và hoạt động học tập của AAAA
            </p>
            <a href="/Login" class="btn btn-primary btn-signup">Đăng nhập</a>
            <div class="mt-3">
                <a href="@Url.Action("Register", "Account")" class="teacher-link">Đăng ký miễn phí</a>
            </div>
        </div>
    </section>

    <!-- Features Carousel Section -->
    <section class="features-section">
        <div class="container-fluid">
            <div class="features-carousel">
                <!-- Feature 1: Kiểm tra -->
                <div>
                    <a href="/login" class="feature-card">
                        <div class="feature-header feature-yellow">
                            <h3>Kiểm tra</h3>
                        </div>
                        <div class="feature-body">
                            <div class="feature-preview">
                                <img src="~/asset/image/ZuOC6LVsGrYSvUXH_VI-VN6Test.png" alt="Kiểm tra" class="feature-image">
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Feature 2: Ghép thẻ -->
                <div>
                    <a href="/login" class="feature-card">
                        <div class="feature-header feature-pink">
                            <h3>Ghép thẻ</h3>
                        </div>
                        <div class="feature-body">
                            <div class="feature-preview">
                                <img src="~/asset/image/anh-Introduce1.png" alt="Ghép thẻ" class="feature-image">
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Feature 3: kiến thức -->
                <div>
                    <a href="/login" class="feature-card">
                        <div class="feature-header feature-green">
                            <h3>kiến thức</h3>
                        </div>
                        <div class="feature-body">
                            <div class="feature-preview">
                                <img src="~/asset/image/ZuOC87VsGrYSvUXI_VI-VN5Expertsolutions.png" alt="kiến thức" class="feature-image">
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Feature 4: Học -->
                <div>
                    <a href="/login" class="feature-card">
                        <div class="feature-header feature-blue">
                            <h3>Nhiều khóa học</h3>
                        </div>
                        <div class="feature-body">
                            <div class="feature-preview">
                                <img src="~/asset/image/ZuOCy7VsGrYSvUXF_VI-VN4Learn.png" alt="Học" class="feature-image">
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 2: Chuẩn bị ôn thi -->
    <section class="info-section bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h2 class="section-title">Chuẩn bị ôn thi cho bất kỳ môn học nào</h2>
                    <p class="section-description">
                        Ghi nhớ mọi thứ với các bài kiểm tra thử và phiên học được cá nhân hóa. 
                        98% học sinh cho biết Quizlet đã giúp họ hiểu bài hơn.
                    </p>
                    <a href="/login" class="btn btn-primary btn-start">Bắt đầu</a>
                </div>
                <div class="col-lg-6">
                    <div class="info-image-container">
                        <img src="~/asset/image/ZuODELVsGrYSvUXK_VI-VN1Flashcards.png" alt="Chuẩn bị ôn thi" class="img-fluid rounded-3 shadow">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 3: Mọi lớp học -->
    <section class="info-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0">
                    <h2 class="section-title">Mọi lớp học, mọi bài thi, một ứng dụng học tập tối ưu</h2>
                    <p class="section-description">
                        Tạo thẻ ghi nhớ của riêng bạn hoặc tìm học phần do giáo viên, học sinh và chuyên gia tạo nên. 
                        Học mọi lúc, mọi nơi với ứng dụng miễn phí của chúng tôi.
                    </p>
                    <div class="app-buttons">
                        <a href="#" class="app-store-btn">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg" 
                                 alt="App Store" height="40">
                        </a>
                        <a href="#" class="app-store-btn">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg" 
                                 alt="Google Play" height="40">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="info-image-container">
                        <img src="~/asset/image/ZuODIbVsGrYSvUXM_VI-VN2Learn.png" alt="Ứng dụng học tập" class="img-fluid rounded-3 shadow">
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Section 4: Chọn cách học -->
    <section class="info-section bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="section-title">Chọn cách học mà bạn muốn</h2>
                    <p class="section-description">
                        Biến thẻ ghi nhớ thành câu hỏi trắc nghiệm và nhiều nội dung khác với chế độ Học. 
                        Củng cố kiến thức của bạn bằng các trò chơi học tập như Ghép thẻ.
                    </p>
                    <a href="/login" class="btn btn-primary btn-start">Bắt đầu</a>
                </div>
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="info-image-container">
                        <img src="~/asset/image/ZuODL7VsGrYSvUXN_VI-VN3Test.png" alt="Chọn cách học" class="img-fluid rounded-3 shadow">
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="~/js/Introduce.js" asp-append-version="true"></script>
}