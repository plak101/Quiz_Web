@{
    ViewData["Title"] = "Kết quả thanh toán";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    @if (ViewBag.Success == true)
                    {
                        <div class="text-success mb-3">
                            <i class="fas fa-check-circle fa-4x"></i>
                        </div>
                        <h3 class="text-success">Thanh toán thành công!</h3>
                        <div class="alert alert-success mt-3">
                            <h5><i class="fas fa-gift me-2"></i>Chúc mừng!</h5>
                            <p class="mb-0">Bạn đã mua thành công khóa học. Giờ đây bạn có thể truy cập vào tất cả nội dung của khóa học.</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-danger mb-3">
                            <i class="fas fa-times-circle fa-4x"></i>
                        </div>
                        <h3 class="text-danger">Thanh toán thất bại!</h3>
                        <div class="alert alert-danger mt-3">
                            <p class="mb-0">Đừng lo lắng, các khóa học vẫn còn trong giỏ hàng của bạn. Bạn có thể thử lại sau.</p>
                        </div>
                    }
                    
                    <p class="mt-3 fs-5">@ViewBag.Message</p>
                    
                    <div class="mt-4">
                        @if (ViewBag.Success == true)
                        {
                            <a href="@Url.Action("Library", "Library")" class="btn btn-primary btn-lg me-2">
                                <i class="fas fa-book"></i> Khóa học của tôi
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-home"></i> Về trang chủ
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                                <i class="fas fa-home"></i> Về trang chủ
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>