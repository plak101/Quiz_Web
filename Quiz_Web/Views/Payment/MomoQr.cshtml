@{
    ViewData["Title"] = "Thanh toán MoMo";
    var orderId = Context.Request.Query["orderId"].ToString();
    var qrCodeUrl = Context.Request.Query["qrCodeUrl"].ToString();
    var deeplink = Context.Request.Query["deeplink"].ToString();
}

<link rel="stylesheet" href="~/css/momo-payment.css" asp-append-version="true" />

<div class="momo-payment-container">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(135deg, #a50064 0%, #d82d8b 100%);">
                        <img src="https://developers.momo.vn/v3/img/logo.png" alt="MoMo" class="momo-logo mb-3" style="height: 50px;">
                        <h3 class="mb-0">Thanh toán với MoMo</h3>
                    </div>
                    
                    <div class="card-body text-center p-4">
                        <!-- QR Code Section -->
                        <div class="qr-section mb-4">
                            <h5 class="mb-3">Quét mã QR để thanh toán</h5>
                            <div class="qr-code-container mb-3">
                                <img src="@qrCodeUrl" alt="QR Code" class="qr-code img-fluid" id="qrCodeImage" />
                            </div>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-info-circle me-1"></i>
                                Mở ứng dụng MoMo và quét mã QR
                            </p>
                            <div class="order-id-info p-2 bg-light rounded">
                                <small class="text-muted">Mã đơn hàng:</small>
                                <strong class="d-block">@orderId</strong>
                            </div>
                        </div>

                        <div class="divider my-4">
                            <span class="divider-text">HOẶC</span>
                        </div>

                        <!-- Open MoMo App -->
                        <div class="app-section mb-4">
                            <h6 class="mb-3">Thanh toán trên ứng dụng</h6>
                            <a href="@deeplink" class="btn btn-momo btn-lg w-100 mb-2" id="openMomoApp">
                                <i class="bi bi-phone me-2"></i>Mở ứng dụng MoMo
                            </a>
                            <small class="text-muted d-block">
                                Nhấn để mở ứng dụng MoMo và thanh toán
                            </small>
                        </div>

                        <!-- Status Section -->
                        <div class="status-section mt-4 p-3 bg-light rounded">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="spinner-border text-primary me-2" role="status" id="loadingSpinner">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <span id="statusText">Đang chờ thanh toán...</span>
                            </div>
                            <small class="text-muted d-block mt-2">
                                Trang sẽ tự động cập nhật sau khi thanh toán thành công
                            </small>
                        </div>

                        <!-- Instructions -->
                        <div class="instructions mt-4 text-start">
                            <h6 class="mb-3">
                                <i class="bi bi-lightbulb me-2"></i>Hướng dẫn thanh toán
                            </h6>
                            <ol class="small text-muted">
                                <li>Mở ứng dụng MoMo trên điện thoại</li>
                                <li>Chọn "Quét mã QR" hoặc nhấn nút "Mở ứng dụng MoMo"</li>
                                <li>Quét mã QR hiển thị trên màn hình</li>
                                <li>Xác nhận thông tin và hoàn tất thanh toán</li>
                            </ol>
                        </div>

                        <!-- Cancel Button -->
                        <div class="d-grid gap-2 mt-4">
                            <a href="/checkout" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Hủy thanh toán
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Security Info -->
                <div class="security-info text-center mt-3">
                    <small class="text-muted">
                        <i class="bi bi-shield-check me-1"></i>
                        Giao dịch được bảo mật bởi MoMo
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let checkPaymentInterval;
        const orderId = '@orderId';

        // Check payment status every 3 seconds
        checkPaymentInterval = setInterval(checkPaymentStatus, 3000);

        // Stop checking after 10 minutes
        setTimeout(() => {
            clearInterval(checkPaymentInterval);
            document.getElementById('statusText').textContent = 'Phiên thanh toán đã hết hạn';
            document.getElementById('loadingSpinner').style.display = 'none';
        }, 600000); // 10 minutes

        async function checkPaymentStatus() {
            try {
                const response = await fetch(`/api/payment/status?orderId=${orderId}`);
                const data = await response.json();

                if (data.success && data.status === 'completed') {
                    clearInterval(checkPaymentInterval);
                    document.getElementById('statusText').textContent = 'Thanh toán thành công!';
                    document.getElementById('loadingSpinner').classList.remove('spinner-border', 'text-primary');
                    document.getElementById('loadingSpinner').classList.add('text-success');
                    document.getElementById('loadingSpinner').innerHTML = '<i class="bi bi-check-circle-fill fs-4"></i>';
                    
                    // Redirect after 2 seconds
                    setTimeout(() => {
                        window.location.href = '/payment/success?orderId=' + orderId;
                    }, 2000);
                }
            } catch (error) {
                console.error('Error checking payment status:', error);
            }
        }

        // Handle MoMo app open
        document.getElementById('openMomoApp').addEventListener('click', function(e) {
            // Log the attempt
            console.log('Opening MoMo app...');
        });

        // Refresh QR code if image fails to load
        document.getElementById('qrCodeImage').addEventListener('error', function() {
            console.error('Failed to load QR code');
            this.src = '/images/qr-placeholder.png'; // Fallback image
        });
    </script>
}
