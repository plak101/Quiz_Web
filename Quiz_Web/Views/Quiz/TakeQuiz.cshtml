@model Quiz_Web.Models.Entities.TestAttempt
@{
    ViewData["Title"] = Model.Test.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/quiz/take-quiz.css" />
</head>
<body>
    @Html.AntiForgeryToken()
    
    <div class="quiz-container">
        <!-- Progress Bar -->
        <div class="progress-container">
            <div class="progress">
                <div class="progress-bar" role="progressbar" id="progressBar"></div>
            </div>
            <div class="progress-text" id="progressText">0 / @Model.Test.Questions.Count</div>
        </div>

        <!-- Quiz Card -->
        <div class="quiz-card">
            <div class="quiz-content">
                <!-- Question Section -->
                <div class="question-section">
                    <h2 class="question-title" id="questionTitle">Loading...</h2>
                    <div class="question-text" id="questionText"></div>
                </div>

                <!-- Options Section -->
                <div class="options-section" id="optionsSection">
                    <!-- Options will be populated by JavaScript -->
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="quiz-navigation">
                <button type="button" class="btn btn-secondary" id="prevBtn" disabled>
                    <i class="bi bi-arrow-left"></i> Previous
                </button>
                <button type="button" class="btn btn-primary" id="nextBtn">
                    Next <i class="bi bi-arrow-right"></i>
                </button>
                <button type="button" class="btn btn-success" id="submitBtn" style="display: none;">
                    Submit Quiz
                </button>
            </div>
        </div>

        <!-- Result Card (Hidden initially) -->
        <div class="result-card" id="resultCard" style="display: none;">
            <div class="result-content">
                <div class="result-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-hand-thumbs-up" viewBox="0 0 16 16">
                        <path d="M8.864.046C7.908-.193 7.02.53 6.956 1.466c-.072 1.051-.23 2.016-.428 2.59-.125.36-.479 1.013-1.04 1.639-.557.623-1.282 1.178-2.131 1.41C2.685 7.288 2 7.87 2 8.72v4.001c0 .845.682 1.464 1.448 1.545 1.07.114 1.564.415 2.068.723l.048.03c.272.165.578.348.97.484.397.136.861.217 1.466.217h3.5c.937 0 1.599-.477 1.934-1.064a1.86 1.86 0 0 0 .254-.912c0-.152-.023-.312-.077-.464.201-.263.38-.578.488-.901.11-.33.172-.762.004-1.149.069-.13.12-.269.159-.403.077-.27.113-.568.113-.857 0-.288-.036-.585-.113-.856a2.144 2.144 0 0 0-.138-.362 1.9 1.9 0 0 0 .234-1.734c-.206-.592-.682-1.1-1.2-1.272-.847-.282-1.803-.276-2.516-.211a9.84 9.84 0 0 0-.443.05 9.365 9.365 0 0 0-.062-4.509A1.38 1.38 0 0 0 9.125.111L8.864.046zM11.5 14.721H8c-.51 0-.863-.069-1.14-.164-.281-.097-.506-.228-.776-.393l-.04-.024c-.555-.339-1.198-.731-2.49-.868-.333-.036-.554-.29-.554-.55V8.72c0-.254.226-.543.62-.65 1.095-.3 1.977-.996 2.614-1.708.635-.71 1.064-1.475 1.238-1.978.243-.7.407-1.768.482-2.85.025-.362.36-.594.667-.518l.262.066c.16.04.258.143.288.255a8.34 8.34 0 0 1-.145 4.725.5.5 0 0 0 .595.644l.003-.001.014-.003.058-.014a8.908 8.908 0 0 1 1.036-.157c.663-.06 1.457-.054 2.11.164.175.058.45.3.57.65.107.308.087.67-.266 1.022l-.353.353.353.354c.043.043.105.141.154.315.048.167.075.37.075.581 0 .212-.027.414-.075.582-.05.174-.111.272-.154.315l-.353.353.353.354c.047.047.109.177.005.488a2.224 2.224 0 0 1-.505.805l-.353.353.353.354c.006.005.041.05.041.17a.866.866 0 0 1-.121.416c-.165.288-.503.56-1.066.56z"/>
                    </svg>
                </div>
                <h1 class="result-title">GREAT JOB!</h1>
                <p class="result-message">You've completed the quiz!</p>
                <div class="result-score">
                    <div class="score-circle">
                        <span class="score-value" id="scoreValue">0</span>
                        <span class="score-max">/ <span id="maxScore">0</span></span>
                    </div>
                    <p class="score-label">Your Score</p>
                </div>
                <div class="result-actions">
                    <a href="@Url.Action("Result", "Quiz", new { attemptId = Model.AttemptId })" class="btn btn-primary btn-lg">View Detailed Results</a>
                    <a href="@Url.Action("Index", "Quiz")" class="btn btn-outline-primary btn-lg">Back to Quizzes</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quiz Data -->
    <script>
        const quizData = {
            attemptId: @Model.AttemptId,
            testId: @Model.TestId,
            questions: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                Model.Test.Questions.OrderBy(q => q.OrderIndex).Select(q => new {
                    questionId = q.QuestionId,
                    stemText = q.StemText,
                    points = q.Points,
                    options = q.QuestionOptions.OrderBy(o => o.OrderIndex).Select(o => new {
                        optionId = o.OptionId,
                        optionText = o.OptionText
                    }).ToList()
                }).ToList()
            )),
            timeLimit: @(Model.Test.TimeLimitSec ?? 0),
            submitUrl: '@Url.Action("SubmitQuiz", "Quiz")'
        };
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/quiz/take-quiz.js"></script>
</body>
</html>
