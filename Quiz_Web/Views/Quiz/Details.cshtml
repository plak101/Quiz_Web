@model Quiz_Web.Models.Entities.Test
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Back Button -->
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary mb-4">
                <i class="bi bi-arrow-left me-2"></i>Back to Quizzes
            </a>

            <!-- Quiz Details Card -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.Title</h2>
                </div>
                <div class="card-body">
                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted">Description</h5>
                            <p class="lead">@Model.Description</p>
                        </div>
                    }

                    <!-- Quiz Information -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="info-box p-3 bg-light rounded">
                                <i class="bi bi-question-circle-fill text-primary fs-4 me-2"></i>
                                <div class="d-inline-block">
                                    <div class="fw-bold">Questions</div>
                                    <div class="text-muted">@Model.Questions.Count questions</div>
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.TimeLimitSec.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="info-box p-3 bg-light rounded">
                                    <i class="bi bi-clock-fill text-warning fs-4 me-2"></i>
                                    <div class="d-inline-block">
                                        <div class="fw-bold">Time Limit</div>
                                        <div class="text-muted">@TimeSpan.FromSeconds(Model.TimeLimitSec.Value).ToString(@"mm\:ss") minutes</div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @if (Model.MaxAttempts.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="info-box p-3 bg-light rounded">
                                    <i class="bi bi-arrow-repeat text-success fs-4 me-2"></i>
                                    <div class="d-inline-block">
                                        <div class="fw-bold">Attempts Allowed</div>
                                        <div class="text-muted">@Model.MaxAttempts attempts</div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        <div class="col-md-6">
                            <div class="info-box p-3 bg-light rounded">
                                <i class="bi bi-shuffle text-info fs-4 me-2"></i>
                                <div class="d-inline-block">
                                    <div class="fw-bold">Question Order</div>
                                    <div class="text-muted">@(Model.ShuffleQuestions ? "Randomized" : "Fixed")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quiz Settings -->
                    <div class="alert alert-info">
                        <h6 class="alert-heading mb-2">
                            <i class="bi bi-info-circle me-2"></i>Quiz Instructions
                        </h6>
                        <ul class="mb-0">
                            <li>You can navigate between questions using the Previous and Next buttons</li>
                            <li>Select one answer for each question</li>
                            @if (Model.TimeLimitSec.HasValue)
                            {
                                <li>The quiz will automatically submit when time runs out</li>
                            }
                            <li>Make sure to submit your quiz when finished</li>
                            <li>You cannot change your answers after submission</li>
                        </ul>
                    </div>

                    <!-- Start Quiz Form -->
                    <form method="post" asp-action="StartAttempt" asp-route-testId="@Model.TestId">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-play-fill me-2"></i>Start Quiz
                            </button>
                        </div>
                    </form>

                    <!-- Creator Info -->
                    <div class="mt-4 pt-3 border-top">
                        <small class="text-muted">
                            <i class="bi bi-person me-1"></i>Created by @Model.Owner.Username
                            <span class="ms-3">
                                <i class="bi bi-calendar me-1"></i>@Model.CreatedAt.ToString("MMM dd, yyyy")
                            </span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-box {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .info-box:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
</style>
