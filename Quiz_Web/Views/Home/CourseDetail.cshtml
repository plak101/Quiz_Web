@model Quiz_Web.Models.Entities.Course
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Course Header -->
            <div class="mb-4">
                <h1 class="display-5 fw-bold mb-3">@Model.Title</h1>
                <p class="lead text-muted">@Model.Summary</p>
                
                <div class="d-flex align-items-center gap-3 mb-3">
                    <span class="badge bg-warning text-dark">
                        <i class="fa-solid fa-star"></i> 4.5
                    </span>
                    <span class="text-muted">(@Model.CoursePurchases.Count học viên)</span>
                    <span class="text-muted">
                        <i class="fa-solid fa-user"></i> @Model.Owner.FullName
                    </span>
                </div>
            </div>

            <!-- Course Image -->
            @if (!string.IsNullOrEmpty(Model.CoverUrl))
            {
                <img src="@Model.CoverUrl" class="img-fluid rounded mb-4" alt="@Model.Title" />
            }

            <!-- Course Sections -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-list"></i> Nội dung khóa học
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.CourseSections.Any())
                    {
                        <div class="accordion" id="courseSections">
                            @foreach (var courseSection in Model.CourseSections.OrderBy(s => s.OrderIndex))
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" 
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#section-@courseSection.SectionId">
                                            @courseSection.Title
                                        </button>
                                    </h2>
                                    <div id="section-@courseSection.SectionId" 
                                         class="accordion-collapse collapse" 
                                         data-bs-parent="#courseSections">
                                        <div class="accordion-body">
                                            @if (courseSection.CourseContents.Any())
                                            {
                                                <ul class="list-unstyled">
                                                    @foreach (var content in courseSection.CourseContents.OrderBy(c => c.OrderIndex))
                                                    {
                                                        <li class="mb-2">
                                                            <i class="fa-solid fa-play-circle text-primary"></i>
                                                            @(content.TitleOverride ?? $"Bài {content.OrderIndex}")
                                                            @if (content.IsPreview)
                                                            {
                                                                <span class="badge bg-success ms-2">Xem trước</span>
                                                            }
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <p class="text-muted">Chưa có nội dung</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nội dung khóa học đang được cập nhật</p>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (Model.Price == 0)
                        {
                            <h2 class="text-success fw-bold">MIỄN PHÍ</h2>
                        }
                        else
                        {
                            <h2 class="fw-bold">@Model.Price.ToString("N0") @Model.Currency</h2>
                        }
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                        <button class="btn btn-outline-primary">
                            <i class="fa-solid fa-heart"></i> Yêu thích
                        </button>
                    </div>

                    <hr class="my-4" />

                    <h6 class="fw-bold mb-3">Khóa học bao gồm:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fa-solid fa-video text-primary me-2"></i>
                            @Model.CourseSections.Sum(s => s.CourseContents.Count) bài giảng
                        </li>
                        <li class="mb-2">
                            <i class="fa-solid fa-infinity text-primary me-2"></i>
                            Truy cập trọn đời
                        </li>
                        <li class="mb-2">
                            <i class="fa-solid fa-mobile text-primary me-2"></i>
                            Học trên mọi thiết bị
                        </li>
                        <li class="mb-2">
                            <i class="fa-solid fa-certificate text-primary me-2"></i>
                            Chứng chỉ hoàn thành
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>